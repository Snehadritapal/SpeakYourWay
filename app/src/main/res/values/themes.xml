<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base Theme for Light Mode -->
    <style name="Base.Theme.SpeakYourWay" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary and Secondary Colors -->
        <item name="colorPrimary">#6200EE</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSecondary">#03DAC5</item>
        <item name="colorOnSecondary">#000000</item>

        <!-- Background and Surface Colors -->
        <item name="android:windowBackground">#F5F5F5</item>
        <item name="colorSurface">#FFFFFF</item>
        <item name="colorOnSurface">#000000</item>

        <!-- Status and Navigation Bar Colors -->
        <item name="android:statusBarColor">#6200EE</item>
        <item name="android:navigationBarColor">#6200EE</item>

        <!-- Fonts -->
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <!-- Inheriting the base theme -->
    <style name="Theme.SpeakYourWay" parent="Base.Theme.SpeakYourWay" />
</resources>
